{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": false,
        "suppressImplicitAnyIndexErrors": false,
        "watch": false       
    },
    "filesGlob": [
        ".*.ts"
    ],
    "files": [
        "./index.ts",
        "./models.ts",
        "./routes.ts",
        "./tips.ts",
        "./types.ts",
        "./sockets.ts"
    ]
}
