
<section ng-controller="studentClickCtrl">

    <script type="text/ng-template" id="myModalContent.html">
        <div class="modal-header">
            <h2 class="modal-title">Question</h2>
            <!-- b>Time remaining: </b><span ng-bind="counter.val.cnt"></span> seconds -->                             
        </div>
        <div class="modal-body">                            
            <p ng-bind-html="quiz.val"></p>
            <span ng-repeat="choice in choices.val">
                <button class="btn \{{ choice.class }}"
                        type="button" 
                        ng-click="$event.preventDefault(); response.rsp = choice.text; ok()">\{{ choice.text }}</button>
            </span>        
        </div>
                
        <div class="modal-footer">
                <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>            
        </div>
    </script>           

</section>

