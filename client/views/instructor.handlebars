<div ng-controller="instructorClickCtrl" data-ng-init="instructorInit()">

    <!-- Question selection -->
    <p>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Select Question <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" ng-disabled="quizStarted" >
                <li><a href="#" ng-repeat='option in questionPool track by $index' value="\{{ option }}" ng-click="loadQuestion($index)">\{{ option.description.substring(0,40) }} ...</a></li>            
            </ul>
        </div>
                
        <!--<select class="btn btn-default  btn-large" ng-model="selectedQuestion" ng-change="loadQuestion()" ng-disabled="quizStarted">
            <option class="btn btn-default" ng-repeat='option in questionPool track by $index' value="\{{ option }}">
                \{{ option.description.substring(0,40) }} ...
            </option>
        </select>    -->
    
    <!-- Play/Stop buttons -->
        
        <button class="btn btn-default" ng-disabled="!quizReady" ng-click="startQuiz()" tooltip-class="btn" tooltip-placement="top" uib-tooltip="Start the Quiz!">
            <span class="glyphicon glyphicon-play"/>
        </button>
        <button class="btn btn-default" ng-disabled="!quizStarted" ng-click="stopQuiz()" tooltip-class="btn" tooltip-placement="top" uib-tooltip="Stop the Quiz!">
            <span class="glyphicon glyphicon-stop"/>
        </button>
        <!-- Show correct answer button -->
        <span style="float:right">        
        <button type="button" class="btn btn-default" ng-model="showCorrectAnswer" ng-disabled="!quizReady" uib-btn-checkbox btn-checkbox-true="true" btn-checkbox-false="false">
            Show correct answer
        </button>
        <button type="button" class="btn btn-default" ng-model="showResponses" ng-disabled="!quizReady" uib-btn-checkbox btn-checkbox-true="true" btn-checkbox-false="false">
            View responses
        </button>    
        </span>
    </p>
    
    <!-- Preview box -->
    <div class="panel panel-default">
        <div class="panel-body" >
            <p><label>Preview</label></p>
            <p><span ng-bind-html="preview()" ng-cloak></span></p>
        </div>
    </div>
    <!-- Status -->
    <div ng-show="quizStarted" ng-cloak>
        <font color="green" style="padding-right:5em">Quiz In Progress</font>
        <font               style="padding-right:5em">Elapsed Time \{{ counter }} seconds</font>
        <font               style="padding-right:5em">\{{ studentsAnsweredCount }} / \{{ totalStudentsInRoom }} students have answered</font>
    </div>
    
        

    <!-- Graph -->
    <div class="panel panel-default" ng-show="showResponses" ng-cloak>
        <div class="panel-body">
        <div id="viz"></div>
        </div>
    </div>
</div>
